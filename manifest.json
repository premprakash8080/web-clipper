{
  "manifest_version": 3,
  "name": "WebVizz Clipper",
  "description": "Clip the visible portion of any web page with preserved styling.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "action": {
    "default_icon": {
      "16": "assets/icon_16.png",
      "32": "assets/icon_16.png",
      "48": "assets/icon_48.png",
      "128": "assets/icon_128.png"
    },
    "default_title": "WebVizz Clipper",
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/cleaner.js",
        "src/utils/domUtils.js",
        "src/utils/cssExtractor.js",
        "src/utils/mediaExtractor.js",
        "src/content/selector.js",
        "src/content/contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icon_16.png",
        "assets/icon_48.png",
        "assets/icon_128.png",
        "src/styles/highlight.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
